module v3_kernel_modTest
  implicit none 

contains

  @test
  subroutine v3_kernel_test()
    use pFUnit_Mod
    use v3_kernel_mod
    use constants_mod
    implicit none

    integer :: num_layers, ndf, map(1)
    type(v3_kernel_type) :: v3_kernel
    real(kind=dp) :: xdata(1)
    real(kind=dp) :: answer, tol
    

    v3_kernel = v3_kernel_type()
    map(1)=1
    num_layers=1
    call v3_kernel%RHS_v3_code(num_layers,map,xdata)
    
    write(*,*) "v3_kernel test"
    answer = 1.0D0
    tol=1.0e-14
    write(*,*) "v3_kernel xdata, answer"
    write(*,*) xdata(1),answer
    @assertEqual(xdata(1),answer,tol)
    
    write(*,*) "--------------------------------"

  end subroutine v3_kernel_test

end module v3_kernel_modTest
