!> Test the field representation
!>
module field_mod_test

  implicit none 


contains

  @test
  subroutine test_field()
    use field_mod,               only : field_type,      &
         field_proxy_type
    use function_space_mod,      only : function_space_type, W0, W1, W2, W3
    use function_space_build_mod, only : fs_build, fs_destroy
    use pFUnit_Mod


    implicit none
    type(field_type) :: f1
    type(field_proxy_type) :: f1_p
    type(function_space_type) :: fs

    ! build some function spaces ...
    call fs_build()
    ! make a field with a function space
    f1 = field_type( vector_space = fs%get_instance( W2 ) )
    ! get the proxy
    f1_p = f1%get_proxy()

    ! check the size of the data array is the same as undf from the fs
    @assertEqual( size( f1_p%data ) , f1_p%vspace%get_undf() )
    ! check the the function space the field lives on is the one it was created with
    @assertEqual( f1%which_function_space(), W2 )
    
    ! operations on field data are part of the PSy and Kernel layers so
    ! that is all.

    !tear down ...
    call fs_destroy()

  end subroutine test_field

end module field_mod_test
